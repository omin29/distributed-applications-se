@model ClassVM

@{
    ViewData["Title"] = "Create class";
    ViewData["Specializations"] = new SelectList(new string[] 
        { null!, "Foreign languages", "Natural sciences", "Social sciences" });
}

<h1>Create class</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageScore" class="control-label"></label>
                <input asp-for="AverageScore" class="form-control" />
                <span asp-validation-for="AverageScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization" class="control-label"></label>
                <select asp-for="Specialization" class="form-control"
                    asp-items='@(IEnumerable<SelectListItem>)ViewData["Specializations"]!'></select>
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormTeacherId" class="control-label"></label>
                <select asp-for="FormTeacherId" class ="form-control" asp-items="ViewBag.FormTeacherId"></select>
                <span asp-validation-for="FormTeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
